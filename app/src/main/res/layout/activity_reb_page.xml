<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reb_page">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorDarkOliveGreen"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Rebutia"
        app:titleTextColor="@color/colorWhite" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/colorFloralWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:srcCompat="@drawable/rebutia" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="Rebutia (รีบูเทีย)"
                android:textColor="@color/colorOliveDrab"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="   Rebutia มีลักษณะกำเนิดทางภูมิภาคแอนดีสใต้และประเทศโบลิเวีย, บราซิล, ประเทศอาร์เจนตินา, และเปรู มีลำต้นทรงกลมหรือทรงกระบอก, บางสายพันธุ์มีลำต้นที่แข็งแรง และมีสีสันที่สวยงาม ใบมีรูปเป็นทรงกระบอกหรือทรงลูกเต๋า, บางต้นมีขนาดเล็กน่ารัก \n   การดูแล Rebutia มีความคล้ายคลึงกับการดูแล Gymnocalycium โดยคำนึงถึงการให้แสงและน้ำที่เหมาะสม, รวมถึงการให้ดินที่มีการระบายน้ำดี" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>