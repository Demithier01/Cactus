<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UpdateFragment"
    android:background="#25B7D298">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_margin="20dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mitr_regular"
                    android:text="Form Update Data"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/mitr_regular"
                    android:text="Name: "
                    android:textSize="14dp"/>

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_update"
                    android:padding="8dp"
                    android:fontFamily="@font/sarabun_light"
                    android:hint="editName"
                    android:textColor="@color/colorGray"
                    android:textStyle="bold"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/mitr_regular"
                    android:text="Title: "
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/editTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_update"
                    android:padding="8dp"
                    android:fontFamily="@font/sarabun_light"
                    android:hint="editTitle"
                    android:textColor="@color/colorGray"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/mitr_regular"
                    android:text="URL Image: "
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/editImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_update"
                    android:padding="8dp"
                    android:fontFamily="@font/sarabun_light"
                    android:hint="editImage"
                    android:textColor="@color/colorGray"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/mitr_regular"
                    android:text="Update"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/Silver"
                    android:fontFamily="@font/mitr_regular"
                    android:text="Back" />

            </LinearLayout>



        </androidx.cardview.widget.CardView>





</FrameLayout>