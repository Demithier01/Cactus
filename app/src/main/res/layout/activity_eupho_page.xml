<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Eupho_page">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorDarkOliveGreen"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Euphorbia"
        app:titleTextColor="@color/colorWhite" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/colorFloralWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:srcCompat="@drawable/euphorbia" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Euphorbia (ยูฟอร์เบีย)"
                android:textColor="@color/colorOliveDrab"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="   Euphorbia เป็นกลุ่มของพืชที่มีความหลากหลายมาก, รวมถึงทั้งพืชที่เป็นไม้ล้มลุก, ไม้พุ่ม, และไม้อ้อย. นับว่ามีมากกว่า 2,000 สายพันธุ์ ที่สามารถพบได้ทั่วโลก มีลักษณะทรงลูกและไม้ล้มลุกอย่างหลากหลาย บางสายพันธุ์ของ Euphorbia มีน้ำยาหรือน้ำยาเม็ดที่ออกมาเมื่อถูกทำลาย, ซึ่งอาจเป็นพิษสำหรับผิวหนังและเยื่อบุตา \n   การดูแล Euphorbia ต้องการแสงแดดเต็มที่และอยู่ในสภาพแวดล้อมที่มีแสงมาก เป็นพืชที่ทนทานต่อการแห้งแล้ง, ควรให้น้ำเมื่อดินแห้ง" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>