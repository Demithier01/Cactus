<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:add="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.addData.AddDataFragment"
    android:background="@color/grey_50">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/create_data"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/id"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/addId"
            style="@style/Border.EditText"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:hint="@string/please_enter_id"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/name"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/add_name"
            style="@style/Border.EditText"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:hint="@string/please_enter_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/title"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/add_title"
            style="@style/Border.EditText"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:hint="Enter Title" />

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginStart="40dp"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:text="URL Iamge: "-->
<!--            android:textSize="14dp" />-->
        <!--        <EditText-->
        <!--            android:id="@+id/add_urlImg"-->
        <!--            style="@style/Border.EditText"-->
        <!--            android:layout_marginStart="40dp"-->
        <!--            android:layout_marginEnd="40dp"-->
        <!--            android:hint="Enter URL" />-->
        <com.example.cactus.component.CustomTextFieldEdit
            android:id="@+id/add_urlImg"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="URL Iamge"/>


        <com.example.cactus.component.CustomButton
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Save"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.example.cactus.component.CustomButtonOutline
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="BACK"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>

</FrameLayout>