<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:add="http://schemas.android.com/apk/res-auto"
    tools:context=".AddDataFragment"
    android:background="@color/grey_50">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Creat Data"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:textSize="14dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/addId"
            style="@style/Border.EditText"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:hint="@string/please_enter_id"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="14dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/add_name"
            style="@style/Border.EditText"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:hint="@string/please_enter_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title: "
            android:textSize="14dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/add_title"
            style="@style/Border.EditText"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:hint="Enter Title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL Iamge: "
            android:textSize="14dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/add_urlImg"
            style="@style/Border.EditText"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:hint="Enter URL" />

        <Button
            android:id="@+id/btnAdd"
           style="@style/Button.Primary"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Save"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnBack"
            style="@style/Outlined_Button"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Back"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>

</FrameLayout>