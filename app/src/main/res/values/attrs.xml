<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomButton">
        <attr name="android:background" format="color"/>
        <attr name="android:textColor" format="color" />
        <attr name="android:textSize" format="dimension" />
        <attr name="android:text" format="string"/>
        <attr name="custom_click_event" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomButtonOutline">
        <attr name="android:background" format="color"/>
        <attr name="android:textColor" format="color" />
        <attr name="android:strokeColor" format="color"/>
        <attr name="android:strokeWidth" format="dimension"/>
        <attr name="android:textSize" format="dimension" />
        <attr name="android:text" format="string"/>
    </declare-styleable>


    <declare-styleable name="CustomTextFieldEdit">
        <attr name="android:textColor" format="color" />
        <attr name="android:textSize" format="dimension" />
        <attr name="android:strokeWidth" format="dimension"/>
        <attr name="android:strokeColor" format="color" />
        <attr name="android:background" format="color" />
        <attr name="android:hint" format="string"/>
        <attr name="hintTextColor" format="color"/>
        <attr name="android:maxLength"/>

        <attr name="android:inputType">
            <flag name="none" value="1" />
            <flag name="text" value="2" />
            <flag name="textEmailAddress" value="3" />
            <flag name="number" value="4" />
            <flag name="numberDecimal" value="5" />
        </attr>

    </declare-styleable>

    <declare-styleable name="TextFieldComponent">
        <attr name="android:strokeColor" format="color" />
        <attr name="android:hint" format="string"/>

    </declare-styleable>

</resources>