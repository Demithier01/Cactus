<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Custom.Button" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@color/dark_blue_900</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
    </style>
    <style name="Outlined_Button" parent="Custom.Button">
        <item name="android:background">@drawable/selector_button_outlined</item>
    </style>

    <!--CustomTextInputLayoutStyle -->
    <style name="CustomTextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">325dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="boxStrokeColor">@color/dark_blue_900</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/black_50</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
<!--        <item name="endIconDrawable">@drawable/ic_eye</item>-->
<!--        <item name="endIconTint">@color/dark_blue_900</item>-->
<!--        <item name="endIconMode">password_toggle</item>-->
    </style>

    <!--SearchView -->
    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/search_view</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:searchIcon"/>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="TextDetail" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>