<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button.Primary" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@color/dark_blue_900</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
    </style>
    <style name="Outlined_Button" parent="Button.Primary">
        <item name="android:background">@drawable/selector_button_outlined</item>
    </style>

    <style name="Border.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_update</item>
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:padding">10dp</item>

    </style>

</resources>